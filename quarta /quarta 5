import os
os.system("cls || clear" )

login_salvo = "Marta"
senha_salvo = "123"
contador = 0

while True:
    login = input("Digite seu login: ")
    senha = input("Digite seu senha: ")
    contador += 1

    if login_salvo == login and senha_salvo == senha:
        print ("Bem-Vindo")
        break
    else:
        print("login ou senha invalido")
        print(f"Tentativa: {contador} \n")
        if contador == 3:
            break

print("=== FIM ===")