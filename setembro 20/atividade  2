import os
os.system("cls || clear" )

pares = 0
impares = 0
positivo = 0
negativo = 0
contador = 0

while True(5):
    numeiro = int(input(f"Digite o {1 + i} numeiro inteiro: "))
    contador =+1

if numeiro % 2 == 0:
     pares += 1
else:
    impares += 1

if numeiro > 0:
    positivo += 1
elif numeiro < 0:
     negativo                       += 1
